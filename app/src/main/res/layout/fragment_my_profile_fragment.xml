<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile_fragment"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/name_of_the_user"
            android:text="Satyam Raj"
            android:textSize="40sp"
            android:layout_weight="1"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_image" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_message_24"
        android:drawablePadding="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_report"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report"
        android:drawableLeft="@drawable/baseline_report_problem_24"
        android:textSize="20sp"
        android:drawablePadding="20dp"/>

    <TextView
        android:id="@+id/tv_help"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help"
        android:drawableLeft="@drawable/baseline_help_home_24"
        android:textSize="20sp"
        android:drawablePadding="20dp"/>




    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textStyle="bold"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/border_background"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginTop="20dp" />

</LinearLayout>